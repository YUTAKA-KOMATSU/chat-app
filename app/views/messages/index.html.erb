<div class="wrapper">
  <%= render "side_bar" %>
  <%= render "main_chat" %>
</div>

<div class="wrapper">
  <div class="side_bar">
    <%= render "side_bar" %>
    <div class="side_bar_header">
      <div class="header_name">
          <%=link_to current_user.name,  edit_user_path(current_user) %>
      </div>
      <div class="create_room">
        <a href="#">チャットを作成する</a>
      </div>
    </div>
    <div class="rooms">
      <div class="room">
        <div class="room_name">
          <a href="#">techroom1</a>
        </div>
      </div>
      <div class="room">
        <div class="room_name">
          <a href="#">techroom2</a>
        </div>
      </div>
    </div>
  </div>
  <div class="chat">
    <%= render "main_chat" %>
    <div class="chat_header">
      <div class="left_header">
        <div class="header_title">techroom1</div>
      </div>
      <div class="right_header">
        <div class="header_button">
          <a href="#">チャットを終了する</a>
        </div>
      </div>
    </div>
    <div class="messages">
      <div class="message">
        <div class="upper_message">
          <div class="message_user">Yutaka</div>
            <div class="message_date">2020/11/6(Fri) 12:00:00</div>
        </div>
        <div class="lower_message">
          <div class="message_content">おはよう</div>
        </div>
      </div>
      <div class="message">
        <div class="upper_message">
          <div class="message_user">Sam</div>
            <div class="message_date">2020/11/6(Fri) 12:00:00</div>
        </div>
        <div class="lower_message">
          <div class="message_content">こんばんは</div>
        </div>
      </div>
    </div>
    <div class="form">
      <div class="form_input">
        <input placeholder="type a message" class="form_message">
        <label class="form_image">
        <span class="image_file">画像</span>
        <input type="file" class="hidden">
        </label>
      </div>
        <input type="submit" value="送信" class="form_submit">
    </div>
  </div>
</div>